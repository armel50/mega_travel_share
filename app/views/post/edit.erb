
<form action ="/posts/<%= @post.id %>" method= "POST" enctype="multipart/form-data">
<input name="_method" id="hidden" type= "hidden" value="PATCH">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name = "title" value= "<%=@post.title%>">
  </div>


<div class ="form-row">
 <div class="form-group col-6">
    <label for="picture">Enter Picture</label>
    <input type="text" class="form-control" id="picture" name = "picture" placeholder = "Enter the image url" value= "<%=@post.picture%>">
  </div> 
  <div class="form-group col-1 d-flex align-items-center">-OR-</div>
  <div class="form-group col-3 d-flex align-items-end">
    <input  class=" d-flex align-items-center" type="file" name="file" id= "file">
  </div> 
</div>


  <div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3"><%=@post.description%></textarea>
  </div>

      <button type= "submit" class= "btn btn-lg btn-warning">Edit</button>
</form>